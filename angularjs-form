	<script>
		function formController($scope){
		
			$scope.master = {
				firstName:"",
				age:0,
				gender:null,
				language:null,
				employees:"",
				English:false,
				Spanish:false,
				French:false
			};

			$scope.clearFields = function(){
				$scope.user=angular.copy($scope.master);
			}
			
			$scope.clearFields();
		}
	</script>
