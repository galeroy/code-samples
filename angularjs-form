<body>
	<div ng-app="" ng-controller="formController">
		<form>
			<fieldset>
				<legend>Form</legend>
				<p>
					<input type="text" ng-model="user.firstName" /> First Name
				</p>
				
				<p>
					<input type="number" ng-model="user.age" /> Age
				</p>
				
				<p>
					Gender<br />
					<input type="radio" value="male" ng-model="user.gender" /> Male
					<input type="radio" value="female" ng-model="user.gender" /> Female
				</p>
				
				<p>Check all languages spoken
					<input type="checkbox"  value="English" ng-model="user.English" /> English
					<input type="checkbox" value="Spanish" ng-model="user.Spanish" /> Spanish
					<input type="checkbox" value="French" ng-model="user.French" /> French
				</p>
				
				Number of employees<br />
				<select ng-model="user.employees">
					<option value="" selected> -- select -- </option>
					<option value="0 to 50">0 to 50</option>
					<option value="50 to 100">50 to 100</option>
					<option value="more than 100">more than 100</option>
				</select>
				
				<p>
					<button ng-click="clearFields()">RESET FIELDS</button>
				</p>
			</fieldset>
				
		</form>
		
		<table>
